<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EfPowerTools</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EfPowerTools.styles.css" asp-append-version="true" />

</head>
<body>
    <header>

        <div class="sidebar">
            
            <img class="ImageBar" src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/83/Sena_Colombia_logo.svg/1045px-Sena_Colombia_logo.svg.png" />

        
            <ul class="navbar-nav">
                <!-- Agrega más elementos del sidebar según sea necesario -->
               
                        
                    

                           <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Create">Usuarios</a>
                        </li>
                        <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Facturas" asp-action="Create">Factura</a>
                        </li>
                        <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Productoes" asp-action="Create">Productos</a>
                        </li>
                        <li class="nav-item">
                            <partial Name="_LoginPartial"/>
                        </li>
                
            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @*
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EfPowerTools - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
